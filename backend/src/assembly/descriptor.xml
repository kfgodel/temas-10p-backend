<?xml version="1.0" encoding="UTF-8"?>

<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>zip-package</id>

  <formats>
    <format>zip</format>
  </formats>

  <!-- Include the app name as a root folder inside the zip file -->
  <includeBaseDirectory>true</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>target/unpacked</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <excludes>
        <exclude>app/executable-app.jar</exclude>
      </excludes>
    </fileSet>
    <!-- Replace the example app with our own -->
    <fileSet>
      <directory>target</directory>
      <outputDirectory>app</outputDirectory>
      <includes>
        <include>executable-app.jar</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>